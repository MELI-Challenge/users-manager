{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "start": "if [ -d \"build\" ] ; then node -r dotenv/config build/index.js ; else node -r dotenv/config index.js dotenv_config_path=/etc/secrets/.env; fi",
    "copy-mock": "cp -r src/app/infrastructure/database/mocks build/app/infrastructure/database/ && rm build/app/infrastructure/database/mocks/*.d.ts",
    "build": "rimraf build && ttsc && tscpaths -p tsconfig.json -s ./src -o ./build && cp ./package.json build/.  && if [ -f \".env\" ] ; then cp ./.env build/. ; fi && npm run copy-mock",
    "test": "TZ=UTC jest --no-cache --detectOpenHandles --runInBand  --reporters='default' --updateSnapshot",
    "test:watch": "npm test -- --watchAll --runInBand",
    "coverage": "npm test -- --coverage --no-cache --detectOpenHandles --reporters='default'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/node": "^18.11.10",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.20"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/hapi__joi": "^17.1.8",
    "@types/jest": "^29.2.3",
    "@types/lodash": "^4.14.191",
    "@types/supertest": "^2.0.12",
    "@types/ts-nameof": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.8.0",
    "supertest": "^6.3.2",
    "ts-jest": "^29.0.3",
    "ts-nameof": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "tscpaths": "^0.0.9",
    "ttypescript": "^1.5.13",
    "typescript": "^4.9.3"
  }
}